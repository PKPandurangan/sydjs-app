#view-home.view
	.statusbar
	.corners
		.btn-menu: .cross: span
		.btn-logo
		.btn-notifications: img(src='img/ui/icon-alarm-white.svg')
	.home
		.container
			.btn-about.logo
			.meetup
				.btn-meetup
					.meetup-state
					.meetup-days
					.meetup-name
					.meetup-date
					.meetup-place
				span.actions
					.left.btn-talks
						span.icon
						span.text View Talks
					.right.btn-calendar
						span.icon
							.number
							img(src='img/ui/icon-calendar-white.svg')
						span.text &nbsp;
			.remaining: .text
			.states
				.rsvp
					.btn-plain.btn-left
						.text Attending
						.icon: img(src='img/ui/icon-close-black.svg')
					.divider
					.btn-plain.btn-right
						.text Nope
						.icon: img(src='img/ui/icon-close-black.svg')
				.sold-out
					.btn-plain.red: .text Tickets sold out
				.soon
					.btn-plain.dark-grey: .text Next meetup soon
			.squid
				.wiggler: img(src='img/ui/squid.svg', width=65)
	.menu
		.buttons
			.btn-join.button: .wrap Join
			.btn-signout.button: .wrap Sign out
			.btn-about.button: .wrap About
			.btn-credits.button: .wrap Credits
		.about
			.container.scrollable
				.logo
