#view-home.view
	.statusbar
	.corners
		.btn-menu
			.cross: span
		.btn-notifications: img(src='img/ui/icon-alarm-white.svg')
	.container
		//- .btn-talks: img(src='img/ui/icon-talks-white.svg')
		.btn-about.logo
		.btn-meetup.meetup
			.next-meetup Next Meetup
			.meetup-days
			.meetup-date
		.btn-calendar
			span.icon
				.number
				img(src='img/ui/icon-calendar-blue.svg')
			span.text Add to calendar
		.states
			.rsvp
				.btn-plain.btn-left
					.text Attending
					.icon: img(src='img/ui/icon-close-black.svg')
				.btn-plain.btn-right
					.text Nope
					.icon: img(src='img/ui/icon-close-black.svg')
			.sold-out
				.btn-plain.grey.text.strike Tickets sold out
			.tickets-soon
				.btn-plain.grey.text.faded Tickets available soon
		.squid
			.wiggler: img(src='img/ui/squid.svg', width=65)
	.menu
		.buttons
			.btn-join.button: .wrap Join
			.btn-signout.button: .wrap Sign out
			.btn-about.button: .wrap About
			.btn-credits.button: .wrap Credits
	.gradient
	.background(data-parallaxify-range-x='80', data-parallaxify-range-y='80')