#view-signin.view
	.titlebar
		.title Welcome to SydJS
	.container.scrollable
		.form
			.wrap
				.line
					input(type='text', id='view-signin-field-username', placeholder='Username', autocomplete='off')
				.line
					input(type='password', id='view-signin-field-password', placeholder='Password', autocomplete='off')
			.footer
				.btn-plain.btn-center.blue.short.btn-submit Submit
				//- .btn-plain.btn-center.blue.short.btn-register Register
				.btn-text.btn-center.forgot-password Forgot Password
	.gradient